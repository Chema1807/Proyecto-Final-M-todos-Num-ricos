# MÃ‰TODO DE EULER

# Yn=Yn-1 + h * f(xn-1*yn-1)
# f=y'
# h=|a-b| / n

# y'-e^x=0 , y(0)=1 , y(5)=?
# dy/dx=e^x

import math
import numpy as np
import matplotlib.pyplot as plt

def f(x,y):
    return 2*x*y


def euler(y0,x,h,f):
    y=[]
    y.append(y0)
    for i in range(1,len(x)):
        y.append(y[i-1]+h*f(x[i-1],y[i-1]))
    return y

a=0
b=2
n=20
h=abs(a-b)/(n)
print('h',h)
x=np.linspace(a,b,n)
y=euler(1,x,h,f)

plt.plot(x,y,'b')
plt.plot(x,[2*xi for xi in x], 'g')
plt.grid()
